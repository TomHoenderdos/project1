<p id="notice"><%= notice %></p>
  <h1> Post number: <%= @post.id %> </h1>
<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div style="border-top: 3px black groove; margin-top:20px; padding-top:5px; min-height: 415px; height:100%;">
  <div style="float:left; width: 200px; height: 100%;">
    <h2 >Comments</h2>
      <%= render @post.comments %>
  </div>

  <div style="float:right; width: 300px;">
    <h2>Add a comment:</h2>
    <%= render "comments/form" %>
  </div>
</div>


